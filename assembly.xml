<assembly>	<id>distribution</id>	<includeBaseDirectory>false</includeBaseDirectory>	<formats>		<format>zip</format>	</formats>	<fileSets>		<fileSet>			<directory>${project.build.directory}</directory>			<outputDirectory>/sita/utils/mip/</outputDirectory>			<includes>				<include>mip.jar</include>			</includes>		</fileSet>				<fileSet>			<directory>config</directory>			<outputDirectory>/sita/utils/mip/config</outputDirectory>			<includes>				<include>*.xml</include>			</includes>		</fileSet>		<fileSet>			<directory>logs</directory>			<outputDirectory>/sita/utils/mip/logs</outputDirectory>			<excludes>				<exclude>**/*</exclude>			</excludes>		</fileSet>	</fileSets>	<files>		<file>			<source>start_mip_process.sh</source>			<fileMode>755</fileMode>			<outputDirectory>/sita/utils/mip</outputDirectory>		</file>		<file>			<source>config/application-unix.properties</source>			<outputDirectory>/sita/utils/mip/config</outputDirectory>			<destName>application.properties</destName>		</file>	</files></assembly>